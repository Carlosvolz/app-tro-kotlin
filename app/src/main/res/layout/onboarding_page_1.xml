<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- 1. IMAGEM DE BASE (A "ÂNCORA") -->

    <ImageView
        android:id="@+id/if_normal_logo"
        android:layout_width="330dp"
        android:layout_height="370dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/if_normal_logo" />

    <!-- 2. IMAGEM SOBREPOSTA -->

    <ImageView
        android:id="@+id/if_tro_logo"
        android:layout_width="330dp"
        android:layout_height="370dp"
        android:alpha="0.0"
        app:layout_constraintBottom_toBottomOf="@id/if_normal_logo"
        app:layout_constraintEnd_toEndOf="@id/if_normal_logo"
        app:layout_constraintStart_toStartOf="@id/if_normal_logo"
        app:layout_constraintTop_toTopOf="@id/if_normal_logo"
        app:srcCompat="@drawable/if_tro_logo" />



    <TextView
        android:id="@+id/textview_introdut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/audiowide"
        android:text="Um aplicativo feito por alunos e para alunos."
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/if_normal_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.0"
        android:fontFamily="@font/audiowide"
        android:text="Da Eletrônica"
        android:textColor="#B30101"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_introdut" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/audiowide"
        android:text="Arraste para a direita"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>